<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="fasion_contact" inherit_id="website.snippets" name="Contact">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]"
               position="inside">
            <t t-snippet="theme_fasion.s_fasion_contact"
               t-thumbnail="/theme_fasion/static/src/images/snippets/contact-block.jpg"/>
        </xpath>
    </template>

    <template id="s_fasion_contact" name="Fashion Contact">
        <section class="banner-sub-contact ">
            <div class="container ">
                <div class="col-12">
                    <div class="banner-name">
                        <h1 class="banner-heading">
                            CONTACT
                        </h1>
                    </div>
                </div>
            </div>
        </section>

        <!-- Banner section ends  here -->

        <!-- Contact form section starts here -->
        <section class="contact">
            <div class="contact">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-3 col-md-4 col-sm-12 contact-left">
                            <div class="address">
                                <h4>ADDRESS</h4>
                                <h5>345 Setwant natrer,</h5>
                                <h5>Washington. United States.</h5>
                            </div>
                            <div class="address">
                                <h4>PHONE</h4>
                                <h5>+1(401) 1234 567.</h5>
                                <h5>+1(804) 4261 150.</h5>
                            </div>
                            <div class="address">
                                <h4>EMAIL</h4>
                                <h5 class="aaw">
                                    <a href="mailto:info@example.com">example@gmail.com</a>
                                </h5>
                                <h5 class="aaw">
                                    <a href="mailto:info@example.com">example2@yahoo.com</a>
                                </h5>
                            </div>
                        </div>
                        <div class="col-lg-9 col-md-8 col-sm-12  contact-right">
                            <form action="#" method="post">
                                <input type="text" class="contact_text" name="your name" placeholder="Your name"
                                       required=" "/>
                                <input type="text" class="contact_text" name="your email" placeholder="Your email"
                                       required=" "/>
                                <input type="text" class="contact_text" name="your subject" placeholder="Your subject"
                                       required=" "/>
                                <input type="text" class="contact_text" name="your phone number"
                                       placeholder="Phone number" required=" "/>
                                <textarea name="your message" placeholder="Your message" required=" "></textarea>
                                <input type="submit" value="Send message"/>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>
</odoo>