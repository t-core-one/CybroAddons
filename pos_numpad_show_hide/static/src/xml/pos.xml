<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">

    <t t-name="PoSNumpadVisibility" t-inherit="point_of_sale.ProductScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[@class='pads']" position="after">
                <div style="text-align: center;" t-on-click="NumpadVisibility">
                    <i class="numpad-toggle fa fa-fw fa-eye fa-2x">
                    </i>
                </div>
        </xpath>
    </t>
</templates>