<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Form view of import payment model -->
    <record id="import_payment_view_form" model="ir.ui.view">
        <field name="name">import.payment.view.form</field>
        <field name="model">import.payment</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="file_type" widget="radio"/>
                        <field name="file_upload" nolabel="1" required="1"/>
                    </group>
                </group>
                <footer>
                    <button string="Import" class="oe_highlight" type="object"
                            name="action_payment_import" data-hotkey="i"/>
                    <button string="Cancel" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
